<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!--点击时显示的颜色-->
    <item android:state_pressed="true">
        <shape>
            <corners android:radius="@dimen/yms_dimens_5.0_px" />
            <solid android:color="@color/color_bg_green_normal_pressed"/>
        </shape>
    </item>
    <!--选中时显示的颜色  浅绿 用于不可点击时-->
    <item android:state_enabled="false">
        <shape>
            <corners android:radius="@dimen/yms_dimens_5.0_px" />
            <solid android:color="@color/color_bg_green_unpressed"/>
        </shape>
    </item>

    <item android:state_selected="true">
    <shape>
        <corners android:radius="@dimen/yms_dimens_5.0_px" />
        <solid android:color="@color/color_bg_green_unpressed"/>
    </shape>
</item>

    <item android:state_selected="false">
        <shape>
            <corners android:radius="@dimen/yms_dimens_5.0_px" />
            <solid android:color="@color/color_bg_green_normal"/>
        </shape>
    </item>

    <!--默认显示的颜色-->
    <item>
        <shape>
            <corners android:radius="@dimen/yms_dimens_5.0_px" />
            <solid android:color="@color/color_bg_green_normal"/>
        </shape>
    </item>

</selector>
